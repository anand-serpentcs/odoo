<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_config_settings_view_form_inherit_sale_delivery" model="ir.ui.view">
        <field name="name">website.config.settings.form.inherit.delivery</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website_sale.website_config_settings_view_form_inherit_website_sale"/>
        <field name="arch" type="xml">
            <div id="msg_delivery_method_setting" position="after">
                <div class="content-group" attrs="{'invisible': [('module_website_sale_delivery', '=', False)]}">
                    <div class="mt16">
                        <button type="action" name="%(delivery.action_delivery_carrier_form)d" string="Delivery Methods" class="btn-link" icon="fa-arrow-right"/>
                    </div>
                </div>
            </div>
            <div id="website_delivery_dhl" position="after">
                <field name="is_installed_dhl" invisible="1"/>
                <div class="content-group">
                    <div class="mt16" attrs="{'invisible': ['|', ('module_delivery_dhl', '=', False), ('is_installed_dhl','=',False)]}">
                        <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="DHL Delivery Methods" class="btn-link" context="{'search_default_delivery_type': 'dhl'}"/>
                    </div>
                </div>
            </div>
            <div id="website_delivery_fedex" position="after">
                <field name="is_installed_fedex" invisible="1"/>
                <div class="content-group">
                    <div class="mt16" attrs="{'invisible': ['|', ('module_delivery_fedex', '=', False), ('is_installed_fedex','=',False)]}">
                        <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="FedEx Delivery Methods" class="btn-link" context="{'search_default_delivery_type': 'fedex'}"/>
                    </div>
                </div>
            </div>
            <div id="website_delivery_usps" position="after">
                <field name="is_installed_usps" invisible="1"/>
                <div class="content-group">
                    <div class="mt16" attrs="{'invisible': ['|', ('module_delivery_usps', '=', False), ('is_installed_usps','=',False)]}">
                        <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="USPS Delivery Methods" class="btn-link" context="{'search_default_delivery_type': 'usps'}"/>
                    </div>
                </div>
            </div>
            <div id="website_delivery_bpost" position="after">
                <field name="is_installed_bpost" invisible="1"/>
                <div class="content-group">
                    <div class="mt16" attrs="{'invisible': ['|', ('module_delivery_bpost', '=', False), ('is_installed_bpost','=',False)]}">
                        <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="bpost Delivery Methods" class="btn-link" context="{'search_default_delivery_type': 'bpost'}"/>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
