<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_event_configuration" model="ir.ui.view">
            <field name="name">Configure Event</field>
            <field name="model">event.config.settings</field>
            <field name="inherit_id" eval="False"/>
            <field name="arch" type="xml">
                <form String="Event settings" class="oe_form_configuration">
                   <header>
                       <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                       <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                   </header>
                   <sheet>
                        <div id="event_settings">
                            <h2>Promotion</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-md-6 o_setting_box">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_event"/>
                                        </span>
                                        <div class="form-control">
                                            <label class="o_setting_title" string="Online Events"/>
                                            <div class="o_setting_help_text">
                                                Publish events on your website
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box" title="Add a navigation menu to your event web pages with an agenda, tracks, a track proposal form, etc.">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_event_track"/>
                                        </span>
                                        <div class="form-control">
                                            <label class="o_setting_title" string="Agenda &amp; Tracks"/>
                                            <div class="o_setting_help_text">
                                                Manage &amp; publish an agenda with tracks
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h2>Registration</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-md-6 o_setting_box">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_event_sale"/>
                                        </span>
                                        <div class="form-control">
                                            <label class="o_setting_title" string="Tickets"/>
                                            <div class="o_setting_help_text">
                                                Sell tickets with sales orders
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_event_sale"/>
                                        </span>
                                        <div class="form-control">
                                            <label class="o_setting_title" string="Online Ticketing"/>
                                            <div class="o_setting_help_text">
                                                Sell tickets on your website
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt16 o_settings_container">
                                <div class="col-md-6 o_setting_box" attrs="{'invisible': [('module_website_event','=',False)]}">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_website_event_questions"/>
                                        </span>
                                        <div class="form-control">
                                            <label class="o_setting_title" string="Questions"/>
                                            <div class="o_setting_help_text">
                                                Ask questions to attendees when registering online
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 o_setting_box">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="manual_confirmation"/>
                                        </span>
                                        <div class="form-control">
                                            <label class="o_setting_title" string="Manual Confirmation"/>
                                            <div class="o_setting_help_text">
                                                Confirm registrations manually
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h2>Barcode</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-md-6 o_setting_box">
                                    <div class="input-group">
                                        <span class="input-group-addon o_setting_left_pane">
                                            <field name="module_event_barcode" widget="upgrade_boolean"/>
                                        </span>
                                        <div class="form-control">
                                            <label class="o_setting_title" string="Barcode"/>
                                            <div class="o_setting_help_text">
                                                Scan badges to confirm attendances
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_event_configuration" model="ir.actions.act_window">
            <field name="name">Configure Event</field>
            <field name="res_model">event.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_event_global_settings" name="Settings" 
            parent="menu_event_configuration" sequence="0" action="action_event_configuration" groups="base.group_system"/>
    </data>
</odoo>
