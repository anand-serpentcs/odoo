<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fleet_config_settings_view_form" model="ir.ui.view">
            <field name="name">fleet.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_setting_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='apps']" position="inside">
                    <div class="app_name" setting="fleet"><i class="fa fa-car fleet"/> Fleet</div>
                </xpath>
                <xpath expr="//div[@class='settings']" position="inside">
                    <div class="fleet_setting_view o_hidden">
                        <h2>Fleet Management</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <label string="New Car Request"/>
                                    <div class="text-muted o_row">
                                        <span>An employee cannot request a new car there are more than </span>
                                        <field name="max_unused_cars"/>
                                        <span> existing vehicles availables.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <menuitem id="fleet_config_settings_menu" name="Settings"
            parent="fleet.fleet_configuration" sequence="0" action="base.res_config_setting_act_window"
            groups="base.group_system"/>
    </data>
</odoo>
