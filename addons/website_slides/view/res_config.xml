<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="name">Website livechat settings</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <div id="communication_settings" position="after">
                <h2 class="mt32">Slides</h2>
                <div class="row mt16 oe_flex_container" id="slides_settings">
                    <div class="col-md-6" id="slides_google_content_setting">
                        <div class="input-group">
                            <span class="input-group-addon oe_group_addon24">
                                <input type="checkbox"/>
                            </span>
                            <div class="form-control" style="float: none;">
                                <label string="Google Content"/>
                                <div class="text-muted">
                                    Use your own Google Project to embed Google Drive documents and Youtube videos.
                                </div>
                                <div class="content-group">
                                    <hr class="mt8 mb8" />
                                    <div class="row">
                                        <label class="col-md-4 oe_light_label" for="website_slide_google_app_key"/>
                                        <field name="website_slide_google_app_key" class="col-md-8 oe_inline"/>
                                    </div>
                                </div>
                                <div>
                                    <a href="https://console.developers.google.com/flows/enable_api?apiid=drive,youtube">
                                        Create a Google Project and Get a Key
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    </data>
</odoo>
