<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_project_view_form_inherit_timesheet_poc" model="ir.ui.view">
            <field name="name">project.project.view.form.inherit.timesheet.poc</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="priority">24</field>
            <field name="arch" type="xml">
                <button name="toggle_active" position="before">
                    <button string="Timesheets POC"
                        type="object" name="action_see_timesheets"
                        class="oe_stat_button" icon="fa-calendar"
                        attrs="{'invisible': [('allow_timesheets', '=', False)]}"/>
                </button>
            </field>
        </record>

        <record id="project_task_view_form_inherit_timesheet_poc" model="ir.ui.view">
            <field name="name">project.task.view.form.inherit.timesheet.poc</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='description_page']" position="after">
                    <page string="Timesheets POC">
                    <field name="work_timesheet_ids">
                        <tree editable="bottom" string="Timesheets" default_order="date">
                            <field name="date"/>
                            <field name="user_id" required="1"/>
                            <field name="name"/>
                            <field name="work_logger_id"/>
                            <field name="work_manager_id"/>
                            <field name="unit_amount" string="Duration" widget="float_time"/>
                            <field name="project_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
                </xpath>
            </field>
        </record>
    </data>    
</odoo>
