<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="marketing_automation_menu" name="Marketing Automation"
        web_icon="marketing_automation,static/description/icon.png" />

    <!-- Workitem -->

    <record id="marketing_automation_workitem_view_form" model="ir.ui.view">
        <field name="name">marketing.automation.workitem.form</field>
        <field name="model">marketing.automation.workitem</field>
        <field name="arch" type="xml">
            <form string="Workitem">
                <header>
                    <button name="mark_as_completed" type="object" states="running" class="btn-default" string="Mark as completed" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <field name="test_mode" invisible="1" />
                    <span class="label label-warning pull-right" attrs="{'invisible': [('test_mode', '=', False)]}">Test</span>
                    <div class="oe_title">
                        <label string="Record" />
                        <h1>
                            <field name="resource_ref" required="1" class="o_ma_ref_m2o_only" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="test_email" attrs="{'invisible': [('test_mode', '=', False)], 'required': [('test_mode', '=', True)]}" />
                            <field name="create_date" readonly="1" attrs="{'invisible': [('create_date', '=', False)]}" string="Workflow Started On" />
                        </group>
                        <group>
                            <field name="campaign_id" readonly="1" groups="base.group_no_one" />
                            <field name="model_id" readonly="1" groups="base.group_no_one" />
                            <field name="res_id" readonly="1" groups="base.group_no_one" string="Resource ID" />
                        </group>
                    </group>
                    <div class="o_ma_hierarchy">
                        <div class="o_ma_hierarchy_title" attrs="{'invisible': [('statistic_ids', '=', [])]}">Workflow</div>
                        <div class="o_ma_hierarchy_readonly" attrs="{'invisible': [('statistic_ids', '!=', [])]}">
                            <h3>No activity</h3>
                            <p>
                                It will be generated automatically once you save this record.
                            </p>
                        </div>
                        <field name="statistic_ids" widget="hierarchy_kanban" readonly="1" nolabel="1" class="o_ma_hierarchy_container o_ma_workitem_hierarchy">
                            <kanban default_order="schedule_date">
                                <field name="state" />
                                <field name="activity_type" />
                                <field name="error_msg" />
                                <field name="schedule_date" />
                                <field name="parent_id" />
                                <field name="trigger_type" />
                                <field name="mail_click" />
                                <field name="mail_reply" />
                                <field name="mail_open" />
                                <field name="mail_bounce" />
                                <templates>
                                    <div t-name="kanban-box">
                                        <div class="o_ma_body">
                                            <t t-call="timeline" />
                                            <div class="o_ma_card">
                                                <div class="row">
                                                    <div class="col-xs-1">
                                                        <t t-set="icons" t-value="{'rejected': 'ban', 'processed': 'check', 'cancelled': 'times', 'error': 'exclamation-triangle', 'scheduled': 'clock-o'}" />
                                                        <div t-attf-class="o_ma_icon o_ma_#{record.state.raw_value} text-center">
                                                            <i t-attf-class="fa fa-#{icons[record.state.raw_value]}" />
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-11">
                                                        <strong>
                                                            <field name="activity_id" />
                                                        </strong>
                                                        <span class="o_ma_type">
                                                            <i t-attf-class="fa fa-#{record.activity_type.raw_value == 'email' ? 'envelope-o' : 'cogs'}" /> 
                                                            <field name="activity_type" />
                                                        </span>
                                                        <div>
                                                            <span t-attf-class="o_ma_status_text o_ma_text_#{record.state.raw_value} text-uppercase"><t t-esc="record.state.raw_value" /></span>
                                                            <t t-if="record.error_msg.raw_value">
                                                                <span class="text-muted"> - <field name="error_msg" /></span>
                                                            </t>
                                                        </div>
                                                    </div>
                                                    <div t-if="record.activity_type.raw_value == 'email' and record.state.raw_value == 'processed'" class="col-xs-12">
                                                        <div class="o_ma_actions text-uppercase text-center">
                                                            <span t-att-class="record.mail_open.raw_value ? 'active' : None"><i class="fa fa-check-circle" /> Opened</span>
                                                            <span t-att-class="record.mail_click.raw_value ? 'active' : None"><i class="fa fa-check-circle" /> Clicked</span>
                                                            <span t-att-class="record.mail_reply.raw_value ? 'active' : None"><i class="fa fa-check-circle" /> Replied</span>
                                                            <span t-att-class="record.mail_bounce.raw_value ? 'active' : None"><i class="fa fa-check-circle" /> Bounced</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div t-if="record.state.raw_value == 'scheduled' and record.schedule_date.raw_value" class="o_ma_test_buttons">
                                                    <button name="process_workitems_stats" type="object" class="btn btn-primary btn-sm" title="Run">
                                                        <i class="fa fa-play" />
                                                    </button>
                                                    <button name="cancel_workitems_stats" type="object" class="btn btn-warning btn-sm" title="Cancel">
                                                        <i class="fa fa-times" />
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="o_hierarchy_children" />
                                        </div>
                                    </div>
                                    <t t-name="timeline">
                                        <div class="o_ma_timeline text-center">
                                            <t t-if="record.schedule_date.value">
                                                <field name="schedule_date" />
                                            </t>
                                            <t t-else="">
                                                <t t-if="_.contains(['mail_open', 'mail_reply', 'mail_click'], record.trigger_type.raw_value)">
                                                    <t t-set="actions" t-value="{'mail_open': 'envelope-open-o', 'mail_reply': 'reply', 'mail_click': 'hand-pointer-o'}" />
                                                    <span class="o_ma_text_scheduled">
                                                        Not <i t-attf-class="fa fa-#{actions[record.trigger_type.raw_value]}" /> <t t-esc="record.trigger_type.value.replace('Mail: ', '')" /> yet
                                                    </span>
                                                </t>
                                            </t>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="marketing_automation_workitem_view_tree" model="ir.ui.view">
        <field name="name">marketing.automation.workitem.tree</field>
        <field name="model">marketing.automation.workitem</field>
        <field name="arch" type="xml">
            <tree string="Workitem">
                <field name="resource_ref" string="Resource Name" />
                <field name="model_id" />
                <field name="state" />
                <field name="campaign_id" />
            </tree>
        </field>
    </record>

    <record id="marketing_automation_workitem_view_search" model="ir.ui.view">
        <field name="name">marketing.automation.workitem.search</field>
        <field name="model">marketing.automation.workitem</field>
        <field name="arch" type="xml">
            <search string="Search Workitems">
                <field name="display_name" string="Resource Name" />
                <field name="campaign_id" />
                <filter string="Running" domain="[('state', '=', 'running')]" />
                <filter string="Completed" domain="[('state', '=', 'completed')]" />
                <separator />
                <filter string="Test Mode" domain="[('test_mode', '=', True)]" />
                <group>
                    <filter string="Campaign" context="{'group_by': 'campaign_id'}" />
                    <filter string="State" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="marketing_automation_workitem_action" model="ir.actions.act_window">
        <field name="name">Records</field>
        <field name="res_model">marketing.automation.workitem</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_campaign_id': active_id, 'default_campaign_id': active_id}</field>
    </record>

    <record id="marketing_automation_workitem_action_launch_test" model="ir.actions.act_window">
        <field name="name">Record</field>
        <field name="res_model">marketing.automation.workitem</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_campaign_id': active_id}</field>
    </record>

    <!-- Campaign -->

    <record id="marketing_automation_campaign_view_kanban" model="ir.ui.view">
        <field name="name">marketing.automation.campaign.kanban</field>
        <field name="model">marketing.automation.campaign</field>
        <field name="arch" type="xml">
            <kanban class="o_ma_campaign_kanban">
                <field name="name" />
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="container o_visible">
                                <div class="row o_ma_header">
                                    <div class="col-xs-9 o_ma_title">
                                        <span class="o_ma_text_processed" t-att-title="record.name.raw_value"><t t-esc="record.name.raw_value" /></span>
                                    </div>
                                    <div class="col-xs-3">
                                        <t t-set="state_colors" t-value="{'draft': 'label-primary', 'running': 'o_ma_processed', 'stopped': 'label-danger'}" />
                                        <span t-attf-class="label #{state_colors[record.state.raw_value]} pull-right" t-att-title="record.state.value"><t t-esc="record.state.value" /></span>
                                    </div>
                                </div>
                                <div class="row o_ma_counter text-uppercase text-center">
                                    <div class="col-xs-4 text-muted">
                                        <span>Total</span>
                                        <h2 class="mt4"><strong><field name="total_workitems" /></strong></h2>
                                    </div>
                                    <div class="col-xs-4 o_ma_text_processed">
                                        <span>Running</span>
                                        <h2 class="mt4"><strong><field name="running_workitems" /></strong></h2>
                                    </div>
                                    <div class="col-xs-4 text-primary">
                                        <span>Completed</span>
                                        <h2 class="mt4"><strong><field name="completed_workitems" /></strong></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="marketing_automation_campaign_view_form" model="ir.ui.view">
        <field name="name">marketing.automation.campaign.form</field>
        <field name="model">marketing.automation.campaign</field>
        <field name="arch" type="xml">
            <form string="Campaign">
                <header>
                    <button name="start_campaign" type="object" states="draft,stopped" class="btn-primary" string="Start" />
                    <button name="%(marketing_automation_workitem_action_launch_test)d" type="action" attrs="{'invisible': ['|', ('activity_ids', '=', []), ('state', '=', 'stopped') ]}" class="btn-warning" string="Launch a Test" />
                    <button name="stop_campaign" type="object" states="running" class="btn-danger" string="Stop" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,stopped" />
                </header>
                <field name="is_workitems_outdated" invisible="1"/>
                <div class="text-center" attrs="{'invisible': [('is_workitems_outdated', '=', False)]}">
                    <div class="h4 mt8"><strong>You made changes in workflow!</strong></div>
                    <p>There are some running workitems which are scheduled according to old timing.</p>
                    <p class="mb8">
                        <button name="sync_outdated" type="object" class="btn btn-primary" string="Update" />
                        <button name="no_sync_outdated" type="object" class="btn btn-default ml8" string="Don't update" />
                    </p>
                </div>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="%(marketing_automation_workitem_action)d" type="action" icon="fa-code-fork fa-rotate-180 fa-flip-vertical" class="oe_stat_button">
                            <field name="total_workitems" widget="statinfo" string="Records" />
                        </button>  
                        <button name="toggle_active" type="object" icon="fa-archive" class="oe_stat_button">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" string="Name" />
                        <h1><field name="name" required="1" placeholder="e.g. eCommerce Offers" /></h1>
                    </div>
                    <group>
                        <field name="model_id" attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create_edit': True, 'no_open': True}" class="oe_inline" string="Target Model" />
                        <field name="model_name" invisible="1" />
                        <field name="unique_field_id" options="{'no_create_edit': True, 'no_open': True}" groups="base.group_no_one" class="oe_inline" />
                        <field name="domain" widget="domain" options="{'model': 'model_name'}" />
                    </group>
                    <div class="o_ma_hierarchy">
                        <div class="o_ma_hierarchy_title" attrs="{'invisible': [('activity_ids', '=', [])]}">Workflow</div>
                        <div class="o_ma_hierarchy_readonly oe_read_only" attrs="{'invisible': [('activity_ids', '!=', [])]}">
                            <h3>No activity added</h3>
                            <p>
                                Click on 'Edit' button to add new activity in workflow.
                            </p>
                        </div>
                        <field name="activity_ids" widget="hierarchy_kanban" mode="kanban" nolabel="1" options="{'create_text':'Add new activity'}" context="{'default_campaign_id': active_id}" class="o_ma_hierarchy_container o_ma_campaign_hierarchy">
                            <kanban default_order="delay_in_hours">
                                <field name="id" />
                                <field name="model_name" />
                                <field name="name" />
                                <field name="condition" />
                                <field name="delay_in_hours" />
                                <field name="activity_type" />
                                <field name="parent_id" />
                                <field name="trigger_type" />
                                <field name="total_sent" />
                                <field name="total_click" />
                                <field name="total_open" />
                                <field name="total_reply" />
                                <field name="total_bounce" />
                                <field name="processed" />
                                <field name="rejected" />
                                <templates>
                                    <div t-name="kanban-box">
                                        <div class="o_ma_body">
                                            <t t-call="timeline" />
                                            <div class="o_ma_card">
                                                <div class="o_ma_title_bar">
                                                    <div class="o_ma_icon">
                                                        <span t-attf-class="fa fa-#{record.activity_type.raw_value == 'email' ? 'envelope' : 'cogs'}" />
                                                    </div>
                                                    <div class="o_ma_title">
                                                        <h3 class="mb0 mt0"><a type="edit" t-attf-class="oe_kanban_action oe_kanban_action_a #{read_only_mode and 'o_ma_full' or None}" t-att-title="record.name.raw_value"><field name="name" /></a></h3>
                                                        <div class="o_ma_desc"><t t-esc="record.activity_type.value" /></div>
                                                    </div>
                                                    <div class="o_ma_switch">
                                                        <div t-if="!read_only_mode" class="pull-left mt8 mr4">
                                                            <a type="edit" class="btn btn-primary btn-xs">Edit</a><a type="delete" class="btn btn-link btn-xs">Delete</a>
                                                        </div>
                                                        <span data-mode="graph" class="active" title="Graph"><i class="fa fa-pie-chart" /></span><span data-mode="filter" title="Filter"><i class="fa fa-filter" /></span>
                                                    </div>
                                                </div>
                                                <div class="o_pane o_pane_graph">
                                                    <div class="row mt16">
                                                        <div t-attf-class="col-md-9 col-xs-9 o_ma_graph #{record.activity_type.raw_value == 'email' and 'mb16' or None}">
                                                            <field name="pie_chart_data" widget="marketing_automation_activity_graph" />
                                                            <div class="o_ma_chart_time">Last 15 Days</div>
                                                        </div>
                                                        <div class="col-md-3 col-xs-3 text-center">
                                                            <div class="o_ma_text_processed mb16">
                                                                <h2 class="mt4 mb0"><t t-esc="record.processed.value or 0"></t></h2>
                                                                <div>SUCCESS</div>
                                                            </div>
                                                            <div class="o_ma_text_rejected">
                                                                <h2 class="mt4 mb0"><t t-esc="record.rejected.value or 0"></t></h2>
                                                                <div>REJECTED</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div t-if="record.activity_type.raw_value == 'email'" class="row o_ma_email_details text-center">
                                                        <div class="col-xs-3 text-uppercase">
                                                            <i class="fa fa-pie-chart" /> Email Details
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <strong><t t-esc="record.total_sent.raw_value or 0"></t></strong> Sent
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <strong><t t-esc="Math.round((record.total_click.raw_value/(record.total_sent.raw_value or 1)) * 100) or 0" />%</strong> Clicked
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <strong><t t-esc="Math.round((record.total_reply.raw_value/(record.total_sent.raw_value or 1)) * 100) or 0" />%</strong> Replied
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="o_pane o_pane_filter hidden" />
                                                <div t-if="!read_only_mode" class="o_ma_child_activity text-center">
                                                    <div class="o_ma_child_activity_title text-muted">
                                                        <i class="fa fa-plus-circle" /> Add child activity
                                                    </div>
                                                    <div t-if="record.id.raw_value" class="o_ma_child_activity_buttons">
                                                        <i data-type="act" class="fa fa-code-fork fa-rotate-180 fa-flip-vertical o_ma_text_processed o_add_child" title="Add Another Activity" />
                                                        <t t-if="record.activity_type.raw_value == 'email'">
                                                            <i data-type="mail_open" class="fa fa-envelope-open-o o_ma_text_processed o_add_child" title="Mail Opened" />
                                                            <i data-type="mail_not_open" class="fa fa-envelope-open-o o_ma_text_rejected o_add_child" title="Mail not Opened" />
                                                            <i data-type="mail_reply" class="fa fa-reply o_ma_text_processed o_add_child" title="Mail Replied" />
                                                            <i data-type="mail_not_reply" class="fa fa-reply o_ma_text_rejected o_add_child" title="Mail not Replied" />
                                                            <i data-type="mail_click" class="fa fa-hand-pointer-o o_ma_text_processed o_add_child" title="Mail Clicked" />
                                                            <i data-type="mail_not_click" class="fa fa-hand-pointer-o o_ma_text_rejected o_add_child" title="Mail not Clicked" />
                                                            <i data-type="mail_bounce" class="fa fa fa-exclamation-circle o_ma_text_rejected o_add_child" title="Mail Bounced" />
                                                        </t>
                                                    </div>
                                                    <div t-else="" class="o_ma_child_activity_buttons">
                                                        <div class="mt4"> Please save the campaign to add child activity </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="o_hierarchy_children" />
                                        </div>
                                    </div>
                                    <t t-name="timeline">
                                        <div class="o_ma_timeline text-center">
                                            <t t-set="actions" t-value="{'mail_open': 'envelope-open-o', 'mail_not_open': 'envelope-open-o', 'mail_reply': 'reply', 'mail_not_reply': 'reply', 'mail_click': 'hand-pointer-o', 'mail_not_click': 'hand-pointer-o', 'mail_bounce': 'exclamation-circle'}" />
                                            <t t-if="_.contains(['mail_not_open', 'mail_not_reply', 'mail_not_click'], record.trigger_type.raw_value)">
                                                <span class="o_ma_text_rejected">
                                                    <i t-attf-class="fa fa-#{actions[record.trigger_type.raw_value]}" />
                                                    <t t-esc="_.str.capitalize(record.trigger_type.value.replace('Mail: ', ''))" />
                                                </span>
                                                <div class="o_ma_text_rejected">within</div>
                                            </t>
                                            <strong>
                                                <i class="fa fa-clock-o" /> <field name="interval_number" />
                                                <field name="interval_type" />
                                            </strong>
                                            <t t-if="_.contains(['mail_open', 'mail_reply', 'mail_click'], record.trigger_type.raw_value)">
                                                <div class="o_ma_text_processed">After</div>
                                                <span class="o_ma_text_processed">
                                                    <i t-attf-class="fa fa-#{actions[record.trigger_type.raw_value]}" />
                                                    <t t-esc="record.trigger_type.value.replace('Mail: ', '')" />
                                                </span>
                                            </t>
                                            <t t-if="'mail_bounce' == record.trigger_type.raw_value">
                                                <div class="o_ma_text_rejected">After</div>
                                                <span class="o_ma_text_rejected">
                                                    <i t-attf-class="fa fa-#{actions[record.trigger_type.raw_value]}" />
                                                    <t t-esc="record.trigger_type.value.replace('Mail: ', '')" />
                                                </span>
                                            </t>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                            <form>
                                <sheet>
                                    <div class="oe_title">
                                        <label for="name" class="oe_edit_only" string="Name" />
                                        <h1><field name="name" required="1" placeholder="e.g. eCommerce Offers" /></h1>
                                    </div>
                                    <group>
                                        <group>
                                            <field name="activity_type" widget="radio" options="{'horizontal': true}" />
                                            <field name="mass_mailing_id" domain="[('automation_model_name', '=', model_name), ('is_automation', '=', True)]" context="{'default_state': 'done', 'default_automation_model_name': model_name, 'default_is_automation': True, 'form_view_ref': 'marketing_automation.mass_mailing_view_form'}" attrs="{'required': [('activity_type', '=', 'email')], 'invisible': [('activity_type', '!=', 'email')]}" />
                                            <field name="server_action_id" domain="[('model_id', '=', model_id)]" attrs="{'required': [('activity_type', '=', 'action')], 'invisible': [('activity_type', '!=', 'action')]}" context="{'default_model_id': model_id}" />
                                            <field name="pie_chart_data" invisible="1" />
                                        </group>
                                        <group>
                                            <label for="interval_number" string="Perform" />
                                            <div>
                                                <field name="interval_number" class="oe_inline" />
                                                <field name="interval_type" class="oe_inline ml4" />
                                                <span class="ml8">after</span>
                                            </div>
                                            <label for="trigger_type" class="hidden" />
                                            <div>
                                                <field name="trigger_type" />
                                            </div>
                                            <field name="parent_id" domain="[('id', 'in', parent.activity_ids), ('id', '!=', id)]" attrs="{'required': [('trigger_type', '!=', 'begin')], 'invisible': [('trigger_type', '=', 'begin')]}" />
                                            <label for="parent_id" class="hidden" />
                                            <small class="oe_edit_only o_ma_alert text-muted" attrs="{'invisible': [('trigger_type', '=', 'begin')]}">(save the campaign to make its activities selectable)</small>
                                            <field name="campaign_id" invisible="1" />
                                            <field name="model_id" invisible="1" />
                                            <field name="model_name" invisible="1" />
                                            <field name="delay_in_hours" invisible="1" />
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="Condition">
                                            <group>
                                                <field name="condition" widget="domain" nolabel="1" options="{'in_dialog': True, 'model': 'model_name'}" />
                                            </group>
                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                        <div class="o_ma_hierarchy_editonly oe_edit_only" attrs="{'invisible': [('activity_ids', '!=', [])]}">
                            <h3 class="mb0">Click here to add new activity</h3>
                            <p>
                                Activity will allow to send mail or perform actions.
                            </p>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="marketing_automation_campaign_view_tree" model="ir.ui.view">
        <field name="name">marketing.automation.campaign.tree</field>
        <field name="model">marketing.automation.campaign</field>
        <field name="arch" type="xml">
            <tree string="Campaign">
                <field name="name" />
                <field name="state" />
                <field name="total_workitems" />
            </tree>
        </field>
    </record>

    <record id="marketing_automation_campaign_view_search" model="ir.ui.view">
        <field name="name">marketing.automation.campaign.search</field>
        <field name="model">marketing.automation.campaign</field>
        <field name="arch" type="xml">
            <search string="Search Campaign">
                <filter string="New" domain="[('state', '=', 'draft')]" />
                <filter string="Running" domain="[('state', '=', 'running')]" />
                <filter string="Stopped" domain="[('state', '=', 'stopped')]" />
                <separator />
                <filter string="Archived" domain="[('active', '=', False)]" />
                <group>
                    <filter name="state" string="State" context="{'group_by': 'state'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="marketing_automation_campaign_action" model="ir.actions.act_window">
        <field name="name">Campaign</field>
        <field name="res_model">marketing.automation.campaign</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="marketing_automation_campaign_menu" name="Campaigns"
        parent="marketing_automation_menu"
        action="marketing_automation_campaign_action" />

</odoo>
