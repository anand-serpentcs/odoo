<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="l10n_in_report_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='total']" position="after">
            <div id="total_in_words" class="row mb16">
                <div class="col-xs-2">
                    <strong>Total (In Words): </strong>
                </div>
                <div class="col-xs-8">
                    <span t-field="o.amount_total_words"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//tbody[contains(@class, 'invoice_tbody')]/tr/td[1]" position="replace">
            <td><span t-field="l.name"/><t t-if="l.product_id.hsn_code"><h6><strong class="ml16">HSN Code:</strong> <span t-field="l.product_id.hsn_code"/></h6></t></td>
        </xpath>
        <xpath expr="//div[@name='invoice_address']//div[@t-if='o.partner_id.vat']" position="replace">
            <div t-if="o.partner_id.vat">GSTIN: <span t-field="o.partner_id.vat"/></div>
        </xpath>
        <xpath expr="//table//thead/tr/th[6]" position="attributes">
            <attribute name="t-if">len(o.tax_line_ids) > 0</attribute>
        </xpath>
        <xpath expr="//tbody[contains(@class, 'invoice_tbody')]/tr/td[6]" position="attributes">
            <attribute name="t-if">len(o.tax_line_ids) > 0</attribute>
        </xpath>
    </template>

</odoo>
