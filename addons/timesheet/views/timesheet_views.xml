<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="timesheet_pack_view_search" model="ir.ui.view">
        <field name="name">timesheet.pack.view.search</field>
        <field name="model">timesheet.pack</field>
        <field name="arch" type="xml">
            <search string="Search Timesheet Pack">
               <field name="name"/>
               <field name="analytic_account_id"/>
           </search>
        </field>
    </record>

    <record id="timesheet_pack_view_form" model="ir.ui.view">
        <field name="name">timesheet.pack.view.form</field>
        <field name="model">timesheet.pack</field>
        <field name="arch" type="xml">
            <form string="Timesheet Packs">
                <group>
                    <field name="name"/>
                    <field name="analytic_account_id"/>
                    <field name="timesheet_line_ids"/>
                </group>
            </form>
        </field>
    </record>

    <record id="timesheet_pack_view_tree" model="ir.ui.view">
        <field name="name">timesheet.pack.view.tree</field>
        <field name="model">timesheet.pack</field>
        <field name="arch" type="xml">
            <tree string="Timesheet Packs">
                <field name="name"/>
                <field name="analytic_account_id"/>
            </tree>
        </field>
    </record>

    <record id="timesheet_pack_action" model="ir.actions.act_window">
        <field name="name">Timesheet Packs</field>
        <field name="res_model">timesheet.pack</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="timesheet_pack_view_search"/>
        <field name="help"></field>
    </record>

    <menuitem id="timesheet_menu_root"
        name="Timesheets POC"
        sequence="55"
        groups="base.group_user"
        web_icon="hr_timesheet,static/description/icon_timesheet.png"/>

    <menuitem id="timesheet_menu_my_timesheet"
        name="My Timesheet"
        parent="timesheet_menu_root"
        sequence="5" />

    <menuitem id="timesheet_pack_menu"
        name="Packs"
        parent="timesheet_menu_my_timesheet"
        action="timesheet_pack_action"
        sequence="5"/>

    <menuitem id="timesheet_lines_menu"
        name="Lines"
        parent="timesheet_menu_my_timesheet"
        action="analytic.account_analytic_line_action_entries"
        sequence="5"/>

</odoo>