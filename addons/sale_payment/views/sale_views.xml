<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_view_form_inherit_sale_payment" model="ir.ui.view">
        <field name="name">sale.order.inherit.sale.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="sale_payment_mode" widget="radio" invisible="1"/>
                <field name="require_payment" widget="radio" attrs="{'invisible': [('sale_payment_mode', '=', 'signature')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
