<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_base_module_upgrade" model="ir.ui.view">
            <field name="name">Module Upgrade</field>
            <field name="model">base.module.upgrade</field>
            <field name="arch" type="xml">
                <form string="System Update">
                    <field name="module_id" invisible="1"/>
                    <field name="icon_image" widget="image" class="oe_avatar pull-left mb0" options='{"preview_image": "image_medium", "size": [60, 60]}' readonly="1" attrs="{'invisible': [('module_id', '=', False)]}"/>
                    <div class="mb32" attrs="{'invisible': [('module_id', '=', False)]}">
                        <h4 class="mb0">
                            <field name="name" class="ml8"/>
                        </h4>
                        <small class="ml8 oe_grey" attrs="{'invisible': [('model_detail', '=', False)]}">
                            <field name="model_detail"/> and all related records are going to be removed.
                        </small>
                    </div>
                    <div class="mt16" attrs="{'invisible': [('impact_count', '&lt;', 1)]}">
                        <div class="text-warning">
                            <span>This operation will permanently erase all data currently stored by the modules!</span>
                        </div>
                        <div class="o_horizontal_separator mt16 mb0">Impacted Modules(<field name="impact_count"/>)</div>
                        <span class="oe_grey">This module will trigger the uninstallation of below modules.</span>
                    </div>
                    <div attrs="{'invisible': [('impact_count', '&gt;', 0)]}">
                        No modules to upgrade.
                    </div>
                    <field name="module_ids">
                        <kanban create="false">
                            <field name="module_id"/>
                            <field name="shortdesc"/>
                            <field name="model_detail"/>
                            <field name="state"/>
                            <field name="name"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div>
                                        <img t-att-src="kanban_image('ir.module.module', 'icon_image', record.module_id.raw_value)" class="pull-left" height="60" width="60"/>
                                        <div class="ml64">
                                            <h6 class="mb0 mt0"><field name="shortdesc"/>(<field name="state"/>)</h6>
                                            <p class="oe_grey mb0"><field name="name"/></p>
                                            <small class="oe_grey" t-if="record.model_detail.value"><field name="model_detail"/> and all related records are going to be removed.</small>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                    <footer>
                        <button name="upgrade_module" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" name="upgrade_module_cancel" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_base_module_upgrade" model="ir.actions.act_window">
            <field name="name">Apply Schedule Upgrade</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.module.upgrade</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
           name="Apply Scheduled Upgrades"
           action="action_view_base_module_upgrade"
           groups="base.group_no_one"
           id="menu_view_base_module_upgrade"
           parent="menu_management"
           sequence="50"/>

    </data>
</odoo>
